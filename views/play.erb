<head>
  <style>
    body {
      background-image: url("https://jamalcadoura.files.wordpress.com/2013/04/battle.jpg");
      background-size: cover;
      color: white;
    }
    div {
      background-color: rgba(0, 0, 0, 0.5);
    }
    a {
      color: #33ccff;
    }
    #center {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    width: 40%;
    height: 25%;
    text-align: center;
    }
    p {
      font-size: 130%;
    }
  </style>
</head>
<body>
  <div id='center'>
    <h1><%= @game.player_1.name %> vs. <%= @game.player_2.name %></h1>
    <p><%= @game.player_1.name %>: <%= @game.player_1.hp %> HP</p>
    <p><%= @game.player_2.name %>: <%= @game.player_2.hp %> HP</p>
    <%= @game.current_turn.name %>'s turn to <a href='/attack'>attack</a>
  </div>
</body>